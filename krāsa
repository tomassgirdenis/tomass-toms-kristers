#bez inputa
import math
def sienu_izmaksas(cena, krāsas_bundžam2, iztabas_augstums, iztabas_platums, iztabas_garums) :
    daudzums_m2 = (math.ceil(iztabas_platums) * math.ceil(iztabas_augstums)) * 2 + (math.ceil(iztabas_garums) * math.ceil(iztabas_augstums)) * 2
    izmaksas = cena * (daudzums_m2 / krāsas_bundžam2)
    return izmaksas

cena = 27.99 
krāsas_bundžam2 = 40.0
iztabas_augstums = 3.20
iztabas_platums = 5.25
iztabas_garums = 7.50

izmaksas = sienu_izmaksas(cena, krāsas_bundžam2, iztabas_augstums, iztabas_platums, iztabas_garums)
#print(("Lai nokrāsotu izstabu jums jāiztērē: ") + izmaksa):
#print(f"Your answer is {izmaksas}")

print("Lai nokrāsotu izstabu jums ir jaiztēre",math.ceil(izmaksas))
#ar inputu
import math
def sienu_izmaksas(iztabas_augstums,iztabas_platums,iztabas_garums):
    daudzums_m2 = (math.ceil(iztabas_platums) * math.ceil(iztabas_augstums)) * 2 + (math.ceil(iztabas_garums) * math.ceil(iztabas_augstums)) * 2
    return daudzums_m2
cena = int(input("Cik maksā krāsas bundža?: "))
krāsas_bundžam2 = int(input("Cik ar vienu krāsas bundžu var nokrāsot m2?: "))
iztabas_augstums = int(input("Kāds ir iztabas augstums?: "))
iztabas_platums = int(input("Kāds ir iztabas platums?: "))
iztabas_garums =int(input("Kāds ir iztabas garums?: "))

#izmaksas = sienu_izmaksas(cena, krāsas_bundžam2, iztabas_augstums, iztabas_platums, iztabas_garums)
loga_augstums = int(input("loga augstums"))
loga_platums = int(input("loga platums "))
cik_logi = int(input("cik logi istaba?"))
def kvadratmetri(loga_platums,loga_augstums,daudzums_m2):
    counter = 0
    while counter <= cik_logi:
        loga_laukums = loga_augstums*loga_platums
        kopejais_m2 = daudzums_m2 - loga_laukums
        counter += 1
        return kopejais_m2
kopejais_m2 = kvadratmetri(loga_platums,loga_augstums,daudzums_m2)
print(kopejais_m2)





print("Lai nokrāsotu izstabu jums ir jaiztēre",math.ceil())
